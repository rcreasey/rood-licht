extends ../layout/default

block content
  
  .row
    .col-md-8.col-md-offset-2
      include _navigation

  .row
    .col-md-8.col-md-offset-2
      h1 Outbound Status
      table.table.table-condensed.table-hover
        thead
          tr
            th Station
            th.pending-volume Pending Volume
        tbody
          each contract in outbound
            - if ( contract.startStation )
              tr.success
                td= contract.startStation.stationName
                td.pending-volume= accounting.formatNumber(contract.volume, 0)
                  |  m
                  sup 3

    .col-md-8.col-md-offset-2
      h1 Inbound Status
      table.table.table-condensed.table-hover
        thead
          tr
            th Station
            th.pending-volume Pending Volume
        tbody
          each contract in inbound
            - if ( contract.endStation )
              tr.warning
                td= contract.endStation.stationName
                td.pending-volume= accounting.formatNumber(contract.volume, 0)
                  |  m
                  sup 3


